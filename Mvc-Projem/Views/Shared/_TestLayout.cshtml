@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<title>MVC Projem</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa; /* Açık gri arka plan */
    }

    .sidebar {
        height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        width: 15%;
        background-color: #fdfdfd; /* Kırık beyaz sidebar */
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1); /* Hafif gölge */
        border-right: 1px solid #dee2e6; /* İnce kenarlık */
    }

        .sidebar h3 {
            font-size: 1.5rem;
            color: #495057; /* Soluk koyu gri başlık */
            padding: 15px 10px;
        }

    .list-group {
        background-color: #fdfdfd; /* Kırık beyaz menü arka planı */
    }

    .list-group-item {
        background-color: #fdfdfd; /* Kırık beyaz menü elemanları */
        color: #495057; /* Soluk koyu gri metin */
        border: none; /* Kenarlıkları kaldır */
    }

        .list-group-item:hover {
            background-color: #e9ecef; /* Hover için açık gri ton */
            color: #212529; /* Daha koyu metin rengi */
        }

    .content {
        margin-left: 17%;
        padding: 30px;
        background-color: #fdfdfd; /* Kırık beyaz içerik alanı */
        border-radius: 8px; /* Hafif yuvarlatılmış köşeler */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Hafif gölge */
    }

    .navbar-custom {
        padding: 15px 20px;
        background-color: #f8f9fa; /* Açık gri ton */
        color: #495057; /* Soluk koyu gri metin */
        border-bottom: 1px solid #dee2e6; /* İnce alt kenarlık */
    }

    h1 {
        font-size: 1.8rem;
        font-weight: 600;
    }

    .table-container {
        margin-top: 20px;
    }
</style>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h3 class="p-3">Menüler</h3>
        <div class="list-group">
            <a asp-controller="Birim" asp-action="Index" class="list-group-item list-group-item-action">Birimler</a>
            <a asp-controller="Personel" asp-action="Index" class="list-group-item list-group-item-action">Personeller</a>
            <a href="#" class="list-group-item list-group-item-action">Hakkımızda</a>
            <a asp-controller="Login" asp-action="GirisYap" class="list-group-item list-group-item-action">Çıkış</a>
        </div>
    </div>

    <!-- Page Content -->
    <div class="content">
        <!-- Navbar -->
        <div class="navbar-custom">
            <h1>Asp.Net Core Mvc Proje Geliştirme</h1>
        </div>

        <!-- Main Content -->
        <div class="table-container">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

